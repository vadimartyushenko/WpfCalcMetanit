<Window x:Class="WpfCalcMetanit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalcMetanit"
        mc:Ignorable="d"
        Title="Калькулятор" Height="500" Width="600">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtBlock" Grid.Column="0" Grid.ColumnSpan="4" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
        <Button Grid.Column="0" Grid.Row="1" FontSize="30" Background="DarkSlateGray">1</Button>
        <Button Grid.Column="1" Grid.Row="1" FontSize="30" Background="DarkSlateGray">2</Button>
        <Button Grid.Column="2" Grid.Row="1" FontSize="30" Background="DarkSlateGray">3</Button>
        <Button Grid.Column="3" Grid.Row="1" FontSize="30" Background="DarkSlateGray">4</Button>
        <Button Grid.Column="0" Grid.Row="2" FontSize="30" Background="DarkSlateGray">5</Button>
        <Button Grid.Column="1" Grid.Row="2" FontSize="30" Background="DarkSlateGray">6</Button>
        <Button Grid.Column="2" Grid.Row="2" FontSize="30" Background="DarkSlateGray">7</Button>
        <Button Grid.Column="3" Grid.Row="2" FontSize="30" Background="DarkSlateGray">8</Button>
        <Button Grid.Column="0" Grid.Row="3" FontSize="30" Background="DarkSlateGray">9</Button>
        <Button Grid.Column="1" Grid.Row="3" FontSize="30" Background="DarkSlateGray">0</Button>
        <Button Grid.Column="2" Grid.Row="3" FontSize="20">+</Button>
        <Button Grid.Column="3" Grid.Row="3" FontSize="20">-</Button>
        <Button Grid.Column="0" Grid.Row="4" FontSize="20">*</Button>
        <Button Grid.Column="1" Grid.Row="4" FontSize="20">/</Button>
        <Button Grid.Column="2" Grid.Row="4" FontSize="20">=</Button>
        <Button Grid.Column="3" Grid.Row="4" FontSize="20">&lt;CLEAR&gt;</Button>
        <Button x:Name="swhButton" Grid.Column="0" Grid.Row="5" Content="Switch" FontSize="20" Click="SwhButton_OnClick"></Button>
    </Grid>
</Window>